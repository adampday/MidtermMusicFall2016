@model MusicFall2016.Models.Playlist
@{
    ViewData["Title"] = "Delete a Playlist:";
}
<h2>Are you sure you want to delete this playlist?</h2>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="playListID" />
    <h2>@Model.name</h2>
    <input type="submit" asp-action="Update" class="btn btn-sm btn-default" value="Delete">

</form>

<form action="/Playlists/Index" method="get">
    <button class="btn btn-sm btn-default">Go back</button>
</form>

