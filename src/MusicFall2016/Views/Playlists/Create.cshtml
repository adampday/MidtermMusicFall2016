@model MusicFall2016.Models.Playlist
@{
    ViewData["Title"] = "Create a Playlist:";
}
<h2>Create Playlist:</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="playListID" />
    <input type="text" asp-for="name" />
    <input type="submit" asp-action="Create" class="btn btn-sm btn-default" value="Create">
</form>